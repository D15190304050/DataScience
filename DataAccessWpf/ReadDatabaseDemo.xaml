<Window x:Class="DataAccessWpf.ReadDatabaseDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataAccessWpf"
        mc:Ignorable="d"
        Title="ReadDatabaseDemo" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView Name="lstTransactions" Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="TransactionID" DisplayMemberBinding="{Binding Path=TransactionID}" />
                    <GridViewColumn Header="ShoppingList" DisplayMemberBinding="{Binding Path=ShoppingList}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Row="1" Margin="5" Padding="5" HorizontalAlignment="Right" Click="cmdReadData_Click">Read Data</Button>
    </Grid>
</Window>
