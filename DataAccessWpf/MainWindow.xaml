<Window x:Class="DataAccessWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataAccessWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,5,5,0" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Button.Click="ButtonClick">
            <Button>BindProductObject</Button>
            <Button>EditProductObject</Button>
            <Button>BindToCollection</Button>
            <Button>BindToDataSet</Button>
            <Button>BindToLinqFilteredCollection</Button>
            <Button>VirtualizationTest</Button>
            <Button>ValidationTest</Button>
        </StackPanel>
    </Grid>
</Window>
